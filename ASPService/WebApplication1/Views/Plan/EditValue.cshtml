@model WebApplication1.Models.PlanValues
@{
    ViewBag.Title = "Изменение значения плана";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("EditValue", "Plan", FormMethod.Post))
{
<fieldset>
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.DateTime)
    @Html.HiddenFor(m => m.PlanId)
    <div class="form-group">
        @Html.LabelFor(m => m.Id, "Id", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Id, new { disabled = "disabled" })
        </div>
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.Value, "Значение", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Value, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Изменить" />
        </div>
    </div>
</fieldset>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

