@model WebApplication1.Models.Burden
@{
    ViewBag.Title = "Редактирование нагрузки";
}

<h2>@ViewBag.Title</h2>
<h3>Наименование: @Model.Name</h3>

@using (Html.BeginForm("EditBurden", "Burden", FormMethod.Post))
{
<fieldset>
    @Html.HiddenFor(m => m.Company_Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Id, "Id", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Id, new { disabled = "disabled" })
        </div>
    </div>
    <br/>
        <div class="form-group">
            @Html.LabelFor(m => m.Name, "Название", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Name, new { @class = "form-control" })
            </div>
        </div>
        <br/>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Обновить" />
            </div>
        </div>
</fieldset>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

